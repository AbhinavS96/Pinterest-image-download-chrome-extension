{
  "manifest_version": 2,
  "name": "Pinterest Media Downloader",
  "description": "This extension will open Pinterest pictures and videos in a new tab or download them to your PC",
  "version": "2.0",
  "icons": {
    "128": "/assets/icon_128.png",
    "48": "/assets/icon_48.png",
    "16": "/assets/icon_16.png"
  },
  "page_action": {
    "default_icon": "/assets/icon_16.png",
    "default_popup": "index.html",
    "default_title": "Pinterest Picture Downloader"
  },
  "background": {
    "scripts": [
      "/js/eventPage.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.pinterest.com/pin/*"
      ],
      "js": [
        "/js/content.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "https://*.pinterest.com/pin/"
  ],
  "incognito": "split"
}